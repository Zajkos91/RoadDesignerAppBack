{
  "compilerOptions": {
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES6",
    "downlevelIteration": true,
    "lib" : ["dom", "es6", "dom.iterable"],
    "outDir" : "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "allowSyntheticDefaultImports": true
  }
}